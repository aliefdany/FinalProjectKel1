<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomSheetContainer"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="@drawable/bottom_sheet_back">

    <View
        android:layout_width="48dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/divider_back"
        android:elevation="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center|start"
        android:text="Filter"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />
<View
android:layout_width="match_parent"
    android:layout_height="0.01mm"
    android:layout_marginTop="10dp"
    android:background="@color/rosewood"
    tools:ignore="InOrMmUsage" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Berdasarkan Prodi" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            android:text="Sistem Informasi"
            android:textColor="@color/text_chip"
            app:chipBackgroundColor="@color/chip"
            app:chipCornerRadius="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeColor="@color/rosewood"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            android:text="Teknologi Informasi"
            android:textColor="@color/text_chip"
            app:chipBackgroundColor="@color/chip"
            app:chipCornerRadius="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeColor="@color/rosewood"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTIF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            android:text="Teknik Informatika"
            android:textColor="@color/text_chip"
            app:chipBackgroundColor="@color/chip"
            app:chipCornerRadius="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeColor="@color/rosewood"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTekkom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            android:text="Teknik Komputer"
            android:textColor="@color/text_chip"
            app:chipBackgroundColor="@color/chip"
            app:chipCornerRadius="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeColor="@color/rosewood"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPTI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            android:text="Pend. Teknologi Informasi"
            android:textColor="@color/text_chip"
            app:chipBackgroundColor="@color/chip"
            app:chipCornerRadius="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeColor="@color/rosewood"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipIlkom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins_medium"
            android:padding="12dp"
            android:text="Ilmu Komputer"
            android:textColor="@color/text_chip"
            app:chipBackgroundColor="@color/chip"
            app:chipCornerRadius="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeColor="@color/rosewood"
            app:chipStrokeWidth="2dp" />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/btFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Terapkan" />

</LinearLayout>